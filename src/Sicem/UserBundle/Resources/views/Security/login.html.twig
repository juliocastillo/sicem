{% extends 'layout.html.twig' %}
{% block body %}
    {{ parent() }}
    <div class="panel panel-primary box box-info center-block" style="width: 600px;">
        <div class="panel-heading box-header with-border">
            <h4 class="box-title">&nbsp&nbsp<span class="glyphicon glyphicon-lock"></span> Autenticaci&oacute;n de Usuario</h4>
        </div>
        <form action="{{ path('sicem_user_login_check') }}" class="form-horizontal" method="post">
            <div class="panel-body box-body">
                <div class="form-group">
                    <label for="username" class="col-sm-2 control-label">Usuario</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="username" name="_username" placeholder="Usuario" autofocus >
                    </div>
                </div>
                <div class="form-group">
                    <label for="password" class="col-sm-2 control-label">Password</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                </div>
                {% if error != '' %}
                    <div class="{{ class }}">
                        <p>
                            <strong>
                                {{ error }}
                            </strong>
                        </p>
                    </div>
                {% endif %}
            </div>
        </form>
    </div>
{% endblock %}
